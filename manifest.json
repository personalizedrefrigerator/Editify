{
    "manifest_version": 2,
    "name": "Editify",
    "version": "1.0",
    
    "description": "Replaces in-page textareas with a code editor.",
    "homepage_url": "https://github.com/personalizedrefrigerator/Editify",

    "icons":
    {
        "48": "icons/icon-48.png"
    },

    "permissions":
    [
        "activeTab"
    ],

    "browser_action":
    {
        "default_icon": "icons/icon-48.png",
        "default_title": "Editify",
        "default_popup": "popups/editify.html"
    }
}
